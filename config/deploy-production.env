# Production Environment Configuration
ENVIRONMENT=production
REGISTRY=your-registry.amazonaws.com
NAMESPACE=claudecodeui-production
IMAGE_NAME=claudecodeui

# Resource Configuration
REPLICAS=3
RESOURCE_REQUESTS_CPU=500m
RESOURCE_REQUESTS_MEMORY=1Gi
RESOURCE_LIMITS_CPU=2000m
RESOURCE_LIMITS_MEMORY=2Gi

# Deployment Configuration
DEPLOYMENT_TIMEOUT=600
HEALTH_CHECK_TIMEOUT=300
STRATEGY=blue-green

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info
DEBUG=false

# Database Configuration
DB_CONNECTION_POOL_MIN=2
DB_CONNECTION_POOL_MAX=10
DB_CONNECTION_TIMEOUT=60000

# Security Configuration
CORS_ORIGIN="https://claudecodeui.com"
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
ENABLE_WAF=true
ENABLE_SECURITY_HEADERS=true

# Monitoring Configuration
METRICS_ENABLED=true
ENABLE_MONITORING=true
ENABLE_ALERTING=true
ENABLE_BACKUP=true

# Performance Configuration
ENABLE_CACHING=true
CACHE_TTL=3600
GZIP_ENABLED=true

# Storage Configuration
STORAGE_CLASS=gp3
STORAGE_SIZE=20Gi
BACKUP_RETENTION_DAYS=30

# SSL Configuration
SSL_ENABLED=true
SSL_REDIRECT=true
HSTS_MAX_AGE=31536000

# Scaling Configuration
HPA_ENABLED=true
HPA_MIN_REPLICAS=3
HPA_MAX_REPLICAS=10
HPA_CPU_TARGET=70
HPA_MEMORY_TARGET=80

# Network Configuration
NETWORK_POLICY_ENABLED=true
INGRESS_CLASS=nginx
LOAD_BALANCER_TYPE=nlb